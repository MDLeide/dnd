<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:Double x:Key="IndexCardWidth">
        600
    </system:Double>

    <system:Double x:Key="IndexCardHeight">
        400
    </system:Double>

    <system:Double x:Key="IndexCardImageDiameter">
        160
    </system:Double>

    <system:Double x:Key="IndexCardImageXOffset">
        40
    </system:Double>

    <system:Double x:Key="IndexCardImageYOffset">
        -75
    </system:Double>

    <system:Double x:Key="Zero">
        0
    </system:Double>

    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5,0"/>
    </Style>

    <Style x:Key="ChangeButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Content" Value="Change"/>
    </Style>

    <Style x:Key="CloseIconButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Content" Value="X"/>
    </Style>
    
    <!--todo:move-->
    <DataTemplate x:Key="CheckBoxDataTemplate">
        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Name}"/>
    </DataTemplate>
</ResourceDictionary>